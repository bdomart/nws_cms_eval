{% extends 'base.html.twig' %}

{% block title %}Hello FoodController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col">
            <h1 class="m-0">Liste des aliments</h1>
        </div>
        <div class="col text-right align-self-end">
            <a href="{{ path('food_create') }}" class="btn btn-primary">Créer un aliment</a>
        </div>
    </div>
    {% if foods is not empty %}
        <table class="table table-hover mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Aliment</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Date de création</th>
                <th scope="col">Dernière mise à jour</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for food in foods %}
                <tr>
                    <th scope="row">{{ food.id }}</th>
                    <td>{{ food.name }}</td>
                    <td>{{ food.category.name}}</td>
                    <td>{{ food.dateCreated|date("d/m/Y") }}</td>
                    <td>{{ food.dateUpdated|date("d/m/Y") }}</td>
                    <td>
                        <a href="{{ path('food_edit', {id: food.id}) }}">Modifier</a> -
                        <a href="{{ path('food_delete', {id: food.id}) }}" class="text-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
