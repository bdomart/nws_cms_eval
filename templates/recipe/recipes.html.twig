{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h1 class="m-0">Liste des recettes</h1>
            </div>
            <div class="col text-right align-self-end">
                <a href="{{ path('recipe_create') }}" class="btn btn-primary">Créer une recette</a>
            </div>
        </div>
        {% if recipes is not empty %}
        <table class="table table-hover mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Recette</th>
                <th scope="col">Nombre de personnes</th>
                <th scope="col">Date de création</th>
                <th scope="col">Dernière mise à jour</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
            <tr>
                <th scope="row">{{ recipe.id }}</th>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.numberPeople }}</td>
                <td>{{ recipe.dateCreated|date("d/m/Y") }}</td>
                <td>{{ recipe.dateUpdated|date("d/m/Y") }}</td>
                <td>
                    <a href="{{ path('recipe_show', {id: recipe.id}) }}">Voir</a> -
                    <a href="{{ path('recipe_edit', {id: recipe.id}) }}">Modifier</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
{% endblock %}
